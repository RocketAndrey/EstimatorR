@page
@model Estimator.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Пользователи";
}

<h4>Пользователи</h4>

<p>
    <a asp-page="Edit" class="btn btn-outline-primary"> Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Family)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.User[0].Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.User)
        {
            <tr>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id "> @Html.DisplayFor(modelItem => item.Family)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id"><img src="~/delete.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
