@page
@model Estimator.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Редактирование заказчика</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.CustomerID" />
            <div class="form-group">
                <label asp-for="Customer.Name" class="control-label"></label>
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.INN" class="control-label"></label>
                <input asp-for="Customer.INN" class="form-control" />
                <span asp-validation-for="Customer.INN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-page="./Index" class="btn btn-outline-primary" >К списку </a>
                <input type="submit" value="Сохранить" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
