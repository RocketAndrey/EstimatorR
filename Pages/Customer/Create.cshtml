@page
@model             CreateModel

@{
    ViewData["Title"] = "Создать заказчика";
}
<h4>Создать заказчика</h4>
<hr />
<div class="row">
   
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.Name" class="control-label"></label>
                <input asp-for="Customer.Name" class="form-control" placeholder="Организация"/>
                <span asp-validation-for="Customer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.INN" class="control-label"></label>
                <input asp-for="Customer.INN" class="form-control" placeholder="ИНН организации"/>
                <span asp-validation-for="Customer.INN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-page="./Index" class="btn btn-outline-primary">К списку </a>|<input type="submit" value="Сохранить" class="btn btn-outline-primary" />
            </div>
        </form>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
