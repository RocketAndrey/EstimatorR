@page
@model Estimator.LoginModel

@{
    ViewData["Title"] = "Авторизация";
}

<h4>Войти</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Login.Id" />
            <div class="form-group">
                
                @Html.DisplayNameFor(model => model.Login.Email)
                
                <input asp-for="Login.Email" class="form-control" />
                <span asp-validation-for="Login.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Login.Password)
                <input asp-for="Login.Password" class="form-control" />
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class=" btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
